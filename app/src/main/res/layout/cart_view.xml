<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="400dp"
    android:layout_height="wrap_content">
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/cartView_imageIv"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:src="@drawable/foodd_pic"
            android:scaleType="centerCrop" />
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/cartView_productTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Peruvian-Style Roast Chicken"
                android:textSize="25dp"
                android:layout_marginStart="10dp"
                android:textStyle="bold"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/cartView_priceTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20$"
                    android:textSize="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="5dp"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <ImageButton
                        android:id="@+id/plus_ib"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_plus"
                        android:background="@color/white"/>

                    <EditText
                        android:id="@+id/value_et"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toStartOf="@id/plus_ib"
                        android:background="@drawable/value_box"
                        android:text="1"
                        android:paddingStart="20dp" />
                    <ImageButton
                        android:id="@+id/minus_ib"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_dash"
                        android:background="@color/white"/>
                </LinearLayout>



            </LinearLayout>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.cardview.widget.CardView>